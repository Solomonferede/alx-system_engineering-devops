#!/usr/bin/env bash

# Update package lists and install Nginx
apt-get update
apt-get install nginx -y

# Create a custom 404 error page
sudo mkdir -p /var/www/html/errors
echo '<!DOCTYPE html>
<html>
<head>
    <title>404 Not Found</title>
</head>
<body>
    <p>Ceci n'est pas une page</p>
</body>
</html>' | sudo tee /var/www/html/errors/404.html

# Configure Nginx to use the custom 404 page
sudo sed -i '/server_name _;/a \\n    error_page 404 /errors/404.html;\n    location = /errors/404.html {\n        internal;\n    }' /etc/nginx/sites-available/default

# Test and reload Nginx
service nginx restart

